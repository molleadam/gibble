<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/lib/com.example.gibble"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    
    >

	<com.example.gibble.MyTextView
	     
	    android:layout_marginTop="20dp"
	    android:textColor="@android:color/white"
	    android:textSize="30dp"
	    android:text="We"
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    custom:ttf_name="Roboto-Bold.ttf"/>
	
	<ImageView 
	    android:id = "@+id/imageView"
	    android:src="@drawable/iconheart"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/textView1"
	    />
	
	<com.example.gibble.MyTextView
	    android:clickable="true"
	    android:onClick="ShowDialogDetails"
	    android:textColor="@android:color/white"
	    android:textSize="30dp" 
	    android:id="@+id/statusTextView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/imageView"
	    android:text = "Scrivi testo"
	    custom:ttf_name="Roboto-Bold.ttf"
	    />
	
	<com.example.gibble.PlaceTextView
	    android:clickable="true"
	    android:onClick="changePlace"
	    android:textColor="@android:color/white"
	    android:textSize="40dp"  
	    android:layout_alignParentBottom="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:id="@+id/placeTextView"
	    android:text="Scrivi luogo"
	    custom:ttf_name="Roboto-Bold.ttf"
	    android:layout_marginLeft="10dp"
	    />
    
</RelativeLayout>